<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>


    <formset>

        <form name="loginForm">
            <field property="email" depends="required, email">
                    <arg key="form.email"/>
            </field>
            <field property="password" depends="required,mask">
                    <arg key="form.password"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9a-zA-Z]*$</var-value>
                    </var>
            </field>
        </form>
        <form name="confirmOrderForm">
            <field property="orderId" depends="required, integer">
                    <arg key="form.orderId"/>
            </field>
            <field property="price" depends="required, integer">
                    <arg key="form.price"/>
            </field>
            <field property="transferDate" depends="required, date">
                    <arg key="form.transferDate"/>
            </field>
        </form> 
        <form name="signupForm">
			<field property="firstName" depends="required">
					<arg key="form.firstName"/>
			</field>
			<field property="lastName" depends="required">
					<arg key="form.lastName"/>
			</field>
			<field property="email" depends="required,email">
					<arg key="form.email"/>
			</field>
			<field property="phone" depends="required">
					<arg key="form.phone"/>
			</field>
			
			<field property="address" depends="required">
					<arg key="form.address"/>
			</field>
			<field property="zip" depends="integer">
					<arg key="form.zip"/>
			</field>
			<field property="city" depends="required">
					<arg key="form.city"/>
			</field>
			
			<field property="password" depends="required,minlength">
					<arg key="form.password"/>
					<arg key="${var:minlength}" name="minlength" resource="false"/>
					<var>
						<var-name>minlength</var-name>
						<var-value>5</var-value>
					</var>
			</field>
			<field property="password" depends="maxlength">
					<arg key="form.password"/>
					<arg key="${var:maxlength}" name="maxlength" resource="false"/>
					<var>
						<var-name>maxlength</var-name>
						<var-value>20</var-value>
					</var>
			</field>
		</form>

    </formset>    

</form-validation>
